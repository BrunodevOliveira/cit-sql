{
  "name": "cit-sql",
  "displayName": "cit-sql",
  "description": "Realizar consultas de forma pratica utilizando a interface do VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.executeSqlQuery",
        "title": "Execute SQL Query"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.executeSqlQuery",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.executeSqlQuery",
        "key": "ctrl+alt+q",
        "mac": "cmd+alt+q"
      }
    ],
    "configuration": {
      "title": "SQL Query Executor",
      "properties": {
        "sqlQueryExecutor.apiEndpoint": {
          "type": "string",
          "default": "https://centraldeservicos-dev.trt23.jus.br/lowcode/esi/execute/select_apps",
          "description": "API endpoint for executing SQL queries"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}